{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"logicappName": {
			"defaultValue": "AOAIinTeams",
			"type": "string",
            "metadata": {
                "description": "ロジック アプリの名前"
            }
		},
		"location": {
			"defaultValue": "[resourceGroup().location]",
			"type": "string"
		},
        "azureAISearchEndpoint": {
            "type": "string",
            "metadata": {
                "description": "https://<リソース名>.search.windows.net"
            }
        },
        "azureAISearchIndexName": {
            "type": "string",
            "metadata": {
                "description": "作成したいインデックス名"
            }
        },
        "azureAISearchIndexerName": {
            "type": "string",
            "metadata": {
                "description": "作成したいインデクサー名"
            }
        },
        "azureAISearchDatasourceName": {
            "type": "string",
            "metadata": {
                "description": "作成したいデータソース名"
            }
        },
        "azureAISearchSkillsetName": {
            "type": "string",
            "metadata": {
                "description": "作成したいスキルセット名"
            }
        },
        "azureOpenAIEndpoint": {
            "type": "string",
            "metadata": {
                "description": "https://<リソース名>.openai.azure.com"
            }
        },
        "applicationId": {
            "type": "string",
            "metadata": {
                "description": "SharePoint Online のアプリケーション ID"
            }
        },
        "applicationSecret": {
            "type": "string",
            "metadata": {
                "description": "SharePoint Online のアプリケーション シークレット"
            }
        },
        "sharepointDomain": {
            "type": "string",
            "metadata": {
                "description": "SharePoint Online のドメイン名"
            }
        },
        "sharepointSiteURL": {
            "type": "string",
            "metadata": {
                "description": "https://<ドメイン名>.sharepoint.com/sites/<サイト名>/Shared%20Documents/Forms/AllItems.aspx"
            }
        }
	},
	"variables": {},
	"resources": [
		{
			"type": "Microsoft.Logic/workflows",
			"apiVersion": "2017-07-01",
			"name": "[parameters('logicappName')]",
			"location": "[parameters('location')]",
			"dependsOn": [],
			"properties": {
				"state": "Enabled",
				"definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "triggers": {
                        "When_a_HTTP_request_is_received": {
                            "type": "Request",
                            "kind": "Http"
                        }
                    },
                    "actions": {
                        "Delay": {
                            "runAfter": {
                                "データソース作成": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Wait",
                            "inputs": {
                                "interval": {
                                    "count": 30,
                                    "unit": "Second"
                                }
                            }
                        },
                        "Delay-copy": {
                            "runAfter": {
                                "インデックス作成": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Wait",
                            "inputs": {
                                "interval": {
                                    "count": 30,
                                    "unit": "Second"
                                }
                            }
                        },
                        "データソース作成": {
                            "runAfter": {},
                            "type": "Http",
                            "inputs": {
                                "uri": "[concat(parameters('azureAISearchEndpoint'), '/datasources?api-version=2024-11-01-preview')]",
                                "method": "POST",
                                "headers": {
                                    "Content-Type": "application/json"
                                },
                                "body": {
                                    "name": "@parameters('datasourceName')",
                                    "type": "sharepoint",
                                    "credentials": {
                                        "connectionString": "[concat('SharePointOnlineEndpoint=https://', parameters('sharepointDomain'), '.sharepoint.com/;ApplicationId=', parameters('applicationId'), ';ApplicationSecret=', parameters('applicationSecret'))]"
                                    },
                                    "container": {
                                        "name": "useQuery",
                                        "query": "includeLibrary=@{parameters('siteURL')}"
                                    }
                                },
                                "authentication": {
                                    "type": "ManagedServiceIdentity",
                                    "audience": "https://search.azure.com/"
                                }
                            },
                            "runtimeConfiguration": {
                                "contentTransfer": {
                                    "transferMode": "Chunked"
                                }
                            }
                        },
                        "インデックス作成": {
                            "runAfter": {
                                "Delay": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "uri": "[concat(parameters('azureAISearchEndpoint'), '/indexes?api-version=2024-11-01-preview')]",
                                "method": "POST",
                                "headers": {
                                    "Content-Type": "application/json"
                                },
                                "body": {
                                    "name": "@parameters('indexName')",
                                    "fields": [
                                        {
                                            "name": "id",
                                            "type": "Edm.String",
                                            "searchable": true,
                                            "filterable": false,
                                            "retrievable": true,
                                            "sortable": true,
                                            "facetable": false,
                                            "key": true,
                                            "analyzer": "keyword",
                                            "synonymMaps": []
                                        },
                                        {
                                            "name": "metadata_spo_site_id",
                                            "type": "Edm.String",
                                            "searchable": true,
                                            "filterable": false,
                                            "sortable": false,
                                            "facetable": false,
                                            "analyzer": "ja.lucene"
                                        },
                                        {
                                            "name": "metadata_spo_library_id",
                                            "type": "Edm.String",
                                            "searchable": true,
                                            "filterable": false,
                                            "sortable": false,
                                            "facetable": false,
                                            "analyzer": "ja.lucene"
                                        },
                                        {
                                            "name": "metadata_spo_item_id",
                                            "type": "Edm.String",
                                            "searchable": true,
                                            "filterable": true,
                                            "sortable": false,
                                            "facetable": false,
                                            "analyzer": "ja.lucene"
                                        },
                                        {
                                            "name": "metadata_spo_item_name",
                                            "type": "Edm.String",
                                            "searchable": true,
                                            "filterable": false,
                                            "sortable": false,
                                            "facetable": false,
                                            "analyzer": "ja.lucene"
                                        },
                                        {
                                            "name": "metadata_spo_item_content_type",
                                            "type": "Edm.String",
                                            "searchable": false,
                                            "filterable": true,
                                            "sortable": false,
                                            "facetable": true
                                        },
                                        {
                                            "name": "metadata_spo_item_extension",
                                            "type": "Edm.String",
                                            "searchable": false,
                                            "filterable": true,
                                            "sortable": false,
                                            "facetable": true
                                        },
                                        {
                                            "name": "metadata_spo_item_last_modified",
                                            "type": "Edm.DateTimeOffset",
                                            "searchable": false,
                                            "filterable": false,
                                            "sortable": true,
                                            "facetable": false
                                        },
                                        {
                                            "name": "metadata_spo_item_size",
                                            "type": "Edm.Int64",
                                            "searchable": false,
                                            "filterable": false,
                                            "sortable": false,
                                            "facetable": false
                                        },
                                        {
                                            "name": "metadata_spo_item_path",
                                            "type": "Edm.String",
                                            "searchable": false,
                                            "filterable": false,
                                            "sortable": false,
                                            "facetable": false
                                        },
                                        {
                                            "name": "metadata_spo_item_weburi",
                                            "type": "Edm.String",
                                            "searchable": false,
                                            "filterable": false,
                                            "sortable": false
                                        },
                                        {
                                            "name": "content",
                                            "type": "Edm.String",
                                            "searchable": true,
                                            "filterable": false,
                                            "sortable": false,
                                            "facetable": false,
                                            "analyzer": "ja.lucene"
                                        },
                                        {
                                            "name": "embedding",
                                            "type": "Collection(Edm.Single)",
                                            "searchable": true,
                                            "filterable": false,
                                            "retrievable": true,
                                            "sortable": false,
                                            "facetable": false,
                                            "key": false,
                                            "dimensions": 3072,
                                            "vectorSearchProfile": "sp-vector-profile",
                                            "synonymMaps": []
                                        },
                                        {
                                            "name": "textItems",
                                            "type": "Edm.String",
                                            "searchable": true,
                                            "filterable": true,
                                            "sortable": false,
                                            "facetable": false,
                                            "analyzer": "ja.lucene"
                                        }
                                    ],
                                    "semantic": {
                                      "configurations": [
                                        {
                                          "name": "sp-semantic-config",
                                          "prioritizedFields": {
                                            "titleField": {
                                              "fieldName": "metadata_spo_item_name"
                                            },
                                            "prioritizedContentFields": [
                                              {
                                                "fieldName": "content"
                                              },
                                              {
                                                "fieldName": "metadata_spo_item_name"
                                              },
                                              {
                                                "fieldName": "textItems"
                                              },
                                              {
                                                "fieldName": "metadata_spo_item_weburi"
                                              }
                                            ],
                                            "prioritizedKeywordsFields": []
                                          }
                                        }
                                      ]
                                    },
                                    "vectorSearch": {
                                        "algorithms": [
                                        {
                                            "name": "sp-vector-config",
                                            "kind": "hnsw",
                                            "hnswParameters": {
                                            "metric": "cosine",
                                            "m": 4,
                                            "efConstruction": 400,
                                            "efSearch": 500
                                            }
                                        }
                                        ],
                                        "profiles": [
                                        {
                                            "name": "sp-vector-profile",
                                            "algorithm": "sp-vector-config",
                                            "vectorizer": "sp-vectorizer"
                                        }
                                        ],
                                        "vectorizers": [
                                            {
                                                "name": "sp-vectorizer",
                                                "kind": "azureOpenAI",
                                                "azureOpenAIParameters": {
                                                    "resourceUri": "[parameters('azureOpenAIEndpoint')]",
                                                    "deploymentId": "text-embedding-3-large",
                                                    "modelName": "text-embedding-3-large"
                                                }
                                            }
                                        ]
                                    }
                                },
                                "authentication": {
                                    "type": "ManagedServiceIdentity",
                                    "audience": "https://search.azure.com/"
                                }
                            },
                            "runtimeConfiguration": {
                                "contentTransfer": {
                                    "transferMode": "Chunked"
                                }
                            }
                        },
                        "インデクサー作成": {
                            "runAfter": {
                                "Delay-copy-copy": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "uri": "[concat(parameters('azureAISearchEndpoint'), '/indexers?api-version=2024-11-01-preview')]",
                                "method": "POST",
                                "headers": {
                                    "Content-Type": "application/json"
                                },
                                "body": {
                                    "name": "@parameters('indexerName')",
                                    "dataSourceName": "@parameters('datasourceName')",
                                    "targetIndexName": "@parameters('indexName')",
                                    "skillsetName": "@parameters('skillsetName')",
                                    "schedule": {
                                        "interval": "P1D",
                                        "startTime": "@{utcNow()}"
                                    },
                                    "parameters": {
                                        "batchSize": null,
                                        "maxFailedItems": null,
                                        "maxFailedItemsPerBatch": null,
                                        "base64EncodeKeys": null,
                                        "configuration": {
                                            "indexedFileNameExtensions": ".pdf, .docx, .xlsx, .pptx, .txt",
                                            "excludedFileNameExtensions": ".png, .jpg",
                                            "dataToExtract": "contentAndMetadata"
                                        }
                                    },
                                    "fieldMappings": [
                                        {
                                            "sourceFieldName": "metadata_spo_site_library_item_id",
                                            "targetFieldName": "id",
                                            "mappingFunction": {
                                                "name": "base64Encode"
                                            }
                                        }
                                    ]
                                },
                                "authentication": {
                                    "type": "ManagedServiceIdentity",
                                    "audience": "https://search.azure.com/"
                                }
                            },
                            "runtimeConfiguration": {
                                "contentTransfer": {
                                    "transferMode": "Chunked"
                                }
                            }
                        },
                        "スキルセット作成": {
                            "runAfter": {
                                "Delay-copy": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "uri": "[concat(parameters('azureAISearchEndpoint'), '/skillsets?api-version=2024-11-01-preview')]",
                                "method": "POST",
                                "headers": {
                                    "Content-Type": "application/json"
                                },
                                "body": {
                                    "name": "@parameters('skillsetName')",
                                    "description": "skillset_template",
                                    "skills": [
                                        {
                                            "@@odata.type": "#Microsoft.Skills.Text.SplitSkill",
                                            "name": "#1",
                                            "description": "text split for sharepoint-indexer",
                                            "context": "/document",
                                            "defaultLanguageCode": "ja",
                                            "textSplitMode": "pages",
                                            "maximumPageLength": 500,
                                            "pageOverlapLength": 100,
                                            "maximumPagesToTake": 0,
                                            "unit": "characters",
                                            "inputs": [
                                                {
                                                    "name": "text",
                                                    "source": "/document/content",
                                                    "inputs": []
                                                }
                                            ],
                                            "outputs": [
                                                {
                                                    "name": "textItems",
                                                    "targetName": "textItems"
                                                }
                                            ]
                                        },
                                        {
                                            "@@odata.type": "#Microsoft.Skills.Text.AzureOpenAIEmbeddingSkill",
                                            "name": "#2",
                                            "description": "",
                                            "context": "/document/textItems/*",
                                            "resourceUri": "[parameters('azureOpenAIEndpoint')]",
                                            "deploymentId": "text-embedding-3-large",
                                            "dimensions": 3072,
                                            "modelName": "text-embedding-3-large",
                                            "inputs": [
                                                {
                                                    "name": "text",
                                                    "source": "/document/textItems/*",
                                                    "inputs": []
                                                }
                                            ],
                                            "outputs": [
                                                {
                                                    "name": "embedding",
                                                    "targetName": "embedding"
                                                }
                                            ]
                                        }
                                    ],
                                    "indexProjections": {
                                        "selectors": [
                                            {
                                                "targetIndexName": "@{parameters('indexName')}",
                                                "parentKeyFieldName": "metadata_spo_item_id",
                                                "sourceContext": "/document/textItems/*",
                                                "mappings": [
                                                    {
                                                        "name": "metadata_spo_site_id",
                                                        "source": "/document/metadata_spo_site_id",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "metadata_spo_library_id",
                                                        "source": "/document/metadata_spo_library_id",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "metadata_spo_item_extension",
                                                        "source": "/document/metadata_spo_item_extension",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "textItems",
                                                        "source": "/document/textItems/*",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "embedding",
                                                        "source": "/document/textItems/*/embedding",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "metadata_spo_item_name",
                                                        "source": "/document/metadata_spo_item_name",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "metadata_spo_item_path",
                                                        "source": "/document/metadata_spo_item_path",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "metadata_spo_item_content_type",
                                                        "source": "/document/metadata_spo_item_content_type",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "metadata_spo_item_last_modified",
                                                        "source": "/document/metadata_spo_item_last_modified",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "metadata_spo_item_size",
                                                        "source": "/document/metadata_spo_item_size",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "metadata_spo_item_weburi",
                                                        "source": "/document/metadata_spo_item_weburi",
                                                        "inputs": []
                                                    },
                                                    {
                                                        "name": "content",
                                                        "source": "/document/content",
                                                        "inputs": []
                                                    }
                                                ]
                                            }
                                        ],
                                        "parameters": {
                                            "projectionMode": "skipIndexingParentDocuments"
                                        }
                                    },
                                    "cognitiveServices": {
                                        "@@odata.type": "#Microsoft.Azure.Search.DefaultCognitiveServices"
                                    }
                                },
                                "authentication": {
                                    "type": "ManagedServiceIdentity",
                                    "audience": "https://search.azure.com/"
                                }
                            },
                            "runtimeConfiguration": {
                                "contentTransfer": {
                                    "transferMode": "Chunked"
                                }
                            }
                        },
                        "Delay-copy-copy": {
                            "runAfter": {
                                "スキルセット作成": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Wait",
                            "inputs": {
                                "interval": {
                                    "count": 30,
                                    "unit": "Second"
                                }
                            }
                        }
                    },
                    "outputs": {},
                    "parameters": {
                        "$connections": {
                            "type": "Object",
                            "defaultValue": {}
                        },
                        "datasourceName": {
                            "defaultValue": "[parameters('azureAISearchDatasourceName')]",
                            "type": "String"
                        },
                        "indexName": {
                            "defaultValue": "[parameters('azureAISearchIndexName')]",
                            "type": "String"
                        },
                        "indexerName": {
                            "defaultValue": "[parameters('azureAISearchIndexerName')]",
                            "type": "String"
                        },
                        "skillsetName": {
                            "defaultValue": "[parameters('azureAISearchSkillsetName')]",
                            "type": "String"
                        },
                        "siteURL": {
                            "defaultValue": "[parameters('sharepointSiteURL')]",
                            "type": "String"
                        }
                    }
                },
				"parameters": {
					"$connections": {}
				}
			}
		}
	]
}
